<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Correct paths for CSS files -->
    <link rel="stylesheet" href="/css/accounts.css" />
    <link rel="stylesheet" href="/css/account-right.css" />
    <link rel="stylesheet" href="/css/account-center.css" />
    <link rel="stylesheet" href="/css/account-modal.css" />

    <link
      rel="stylesheet"
      href="/node_modules/bootstrap/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="/node_modules/bootstrap-icons/font/bootstrap-icons.min.css"
    />

    <title>Bank</title>
  </head>

  <body>
    <div class="account-grid">
      <div class="leftbar">
        <div class="icons">
          <div class="icon-head">
            <h2>swb</h2>
          </div>
          <div class="icon-fonts">
            <a href="/index.html"><i class="bi bi-house-fill"></i></a>
            <a href="/accounts.html"><i class="bi bi-wallet"></i></a>
            <a href="/about.html"><i class="bi bi-people"></i></a>
            <a href="/contact-us.html"><i class="bi bi-headset"></i></a>
          </div>

          <div class="settings">
            <a href="#"><i class="bi bi-gear"></i></a>
          </div>
        </div>
      </div>
      <div class="center-grid">
        <div class="split-screen">
          <div class="side-a">
            <div class="navigation">
              <h2>Dashboard</h2>
              <div class="nav-icons">
                <i class="bi bi-sliders"></i>
                <i class="bi bi-bell"></i>
              </div>
            </div>
            <div class="userProfile">
              <h6><%= userName %></h6>
            </div>
            <div class="bal-grid">
              <div class="balance">
                <h2 id="balance">N<%= balance %></h2>
              </div>
              <div class="available-bal">
                available bal: 
                <h6 id="availableBalance">N<%= balance %></h6>
                <h5>
                  current balance :
                  <h6 id="currentBalance">N<%= balance %></h6>
                </h5>
              </div>
            </div>
            

            <!-- Button to open modal -->
            <button class="payment-portal">Make Payment</button>

            <!-- Modal -->
            <div class="login-container">
              <div class="form-container">
                <h2>Sign In</h2>
                <form action="/transfer" method="POST">
                  <label for="">sender:  <h6><%= userName %></h6></label>
                  <input type="hidden" name="receiverAccountNumber" id="finalReceiverAccountNumber">
                  <input type="" id="amount" name="amount" required style="padding: 1rem;">
                  <button type="submit">Send Money</button>
                </form>


                <form id="receiverForm">
                  <label for="accountNumber">Receiver Acc:</label>
                  <input type="text" id="accountNumber" name="receiverAccountNumber" placeholder="Enter account number" required>
                 <button type="button" id="fetchReceiverName">Fetch Receiver Name</button> 
                
                </form>


              </div>
              <div class="welcome-container">
                <h2>Secure Transfer</h2>
                <% if (successfulTransfer) { %>
                  <p>Transfer of <%= transferAmount %> from <%= senderName %> to <%= receiverName %> was successful.</p>
                <% } else { %>
                  <p>No transfer has been made yet.</p>
                <% } %>
              </div>
            </div>
             <!-- Modal -->
          </div>

          <div class="side-b">
            <div class="deposit">
              <div class="last-deposit">
                N<%= depositAmount || '0' %>
                <h6>last deposit</h6>
              </div>
              <div class="report">
                <p class="transaction-report">Frm: <%= depositorName || 'No recent deposit' %></p>
              </div>
            </div>

            <div class="transfer">
              <div class="last-transfer">
                N<%= transferAmount || '0' %>
                <h6>last transfer</h6>
              </div>
              <div class="report">
                <p class="transaction-report">To: <%= receiverName || 'No recent transaction' %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="center-down">
          <div class="news-container">
            <div class="news-header">
              <h1>Be In The Know....</h1>
            </div>
            <div class="news-grid">
              <li></li>
              <li></li>
              <li></li>
              <li></li>
              <li></li>
              <li></li>
              <li></li>
            </div>
          </div>
        </div>
      </div>

      <div class="rightbar">
        <h2>my card</h2>
        <div class="card-img"></div>
        <div class="savings-account">
          <div class="savings-box">
            <h5>savings account</h5>
            <p class="current-balance"><%= balance %></p>
          </div>


          <button class="add-card">add card</button>
        </div>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/JS/accounts.js"></script>
    <script src="/JS/account-modal.js"></script>
    <script src="/JS/input-validation.js"></script>
    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="/node_modules/@popperjs/core/dist/umd/popper.min.js"></script>
    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
